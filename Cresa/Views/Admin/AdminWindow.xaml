<Window x:Class="Cresa.Admin.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Panou Administrator" Height="400" Width="500" WindowStartupLocation="CenterScreen" ResizeMode="CanResizeWithGrip">
    <Grid>
            <Grid.Background>
                <ImageBrush ImageSource="/Resources/fundalAdmin.png" Stretch="UniformToFill"/>
            </Grid.Background>

            <Grid.Resources>
                <Style TargetType="Button">
                    <Setter Property="Foreground" Value="white"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="Width" Value="200"/>
                    <Setter Property="Height" Value="25"/>
                    <Setter Property="Margin" Value="5"/>
                    <Setter Property="Background">
                        <Setter.Value>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#FFA726" Offset="0.0"/>
                                <GradientStop Color="#FB8C00" Offset="1.0"/>
                            </LinearGradientBrush>
                        </Setter.Value>
                    </Setter>

                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border CornerRadius="6" Background="{TemplateBinding Background}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Grid.Resources>

            <StackPanel>
                <TextBlock Text="Panou Administrator" FontSize="24" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" Margin="0,30,0,20"/>
                <Button Content="Adauga Parinte" Click="AdaugaParinte_Click"/>
                <Button Content="Adauga Educator" Click="AdaugaEducator_Click"/>
                <Button Content="Adauga Copil" Click="AdaugaCopil_Click"/>
                <Button Content="Creeaza Grupa" Click="CreeazaGrupa_Click"/>
                <Button Content="Asociaza Parinte-Educator" Click="AsociazaParinteEducator_Click"/>
                <Button Content="Posteaza Rest de Plata" Click="AsociazaPlata_Click"/>
                <Button Content="Asociaza Parinte-Copil" Click="AsociazaParinteCopil_Click"/>
                <Button Content="Inapoi" Click="Inapoi_Click"/>
        </StackPanel>
        </Grid>
</Window>
