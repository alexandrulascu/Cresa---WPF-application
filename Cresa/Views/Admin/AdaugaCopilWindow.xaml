<Window x:Class="Cresa.Admin.AdaugaCopilWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Adauga Copil" Height="400" Width="350" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Resources/fundalButoane.avif" Stretch="UniformToFill"/>
        </Grid.Background>

        <Grid.Resources>
            <Style TargetType="Button">
                <Setter Property="Foreground" Value="Black"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="Width" Value="200"/>
                <Setter Property="Height" Value="30"/>
                <Setter Property="Margin" Value="10"/>
                <Setter Property="Background">
                    <Setter.Value>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#00C9FF" Offset="0.0"/>
                            <GradientStop Color="#92FE9D" Offset="1.0"/>
                        </LinearGradientBrush>
                    </Setter.Value>
                </Setter>

                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border CornerRadius="6" Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </Grid.Resources>
        <StackPanel Margin="20">
            <TextBlock Text="Nume:" Foreground="White" FontWeight="Bold"/>
            <TextBox x:Name="txtNume" Margin="0,5"/>

            <TextBlock Text="Data nasterii:" Foreground="White" FontWeight="Bold"/>
            <DatePicker x:Name="dateNastere" Margin="0,5"/>

            <TextBlock Text="Grupa:" Foreground="White" FontWeight="Bold"/>
            <ComboBox x:Name="comboGrupe" DisplayMemberPath="NumeGrupa" SelectedValuePath="IdGrupa" Margin="0,5"/>
            
            <Button Content="Adauga" Click="AdaugaCopil_Click"/>
            <Button Content="Inapoi" Click="Inapoi_Click"/>
        </StackPanel>
    </Grid>
</Window>
