<Window x:Class="Cresa.Educator.EducatorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Panou Educator" Height="500" Width="600" WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.Resources>
            <Style TargetType="Button">
                <Setter Property="Foreground" Value="Black"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="Width" Value="200"/>
                <Setter Property="Height" Value="30"/>
                <Setter Property="Margin" Value="10"/>
                <Setter Property="Background">
                    <Setter.Value>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#00C9FF" Offset="0.0"/>
                            <GradientStop Color="#92FE9D" Offset="1.0"/>
                        </LinearGradientBrush>
                    </Setter.Value>
                </Setter>

                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border CornerRadius="6" Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </Grid.Resources>
        <Grid.Background>
            <ImageBrush ImageSource="/Resources/fundalEducator.jpg" Stretch="UniformToFill"/>
        </Grid.Background>

        <TabControl Margin="10" Background="Transparent" BorderBrush="Transparent">
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="FontSize" Value="14"/>
                    <Setter Property="Padding" Value="10,5"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabItem">
                                <Border Name="Border"
                                        Background="Transparent"
                                        BorderThickness="1"
                                        CornerRadius="6"
                                        Padding="10,5"
                                        Margin="3"
                                        BorderBrush="White">
                                    <ContentPresenter x:Name="ContentSite"
                                                      VerticalAlignment="Center"
                                                      HorizontalAlignment="Center"
                                                      ContentSource="Header"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="Black"/>
                                        <Setter TargetName="Border" Property="BorderBrush" Value="White"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="Gray"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TabControl.Resources>

            <TabItem Header="Program zilnic">
                <StackPanel Margin="10">
                    <TextBlock Text="Adauga activitate zilnica" FontSize="16" FontWeight="Bold" Foreground="white" Margin="0,0,0,10"/>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="Data:" VerticalAlignment="Center" Foreground="White" Margin="0,0,5,0"/>
                        <DatePicker x:Name="dateProgram" Width="150" Background="White" BorderBrush="Gray" BorderThickness="1"/>

                        <TextBlock Text="Activitate:" VerticalAlignment="Center" Foreground="White" Margin="10,0,5,0"/>
                        <TextBox x:Name="txtActivitate" Width="200"/>
                    </StackPanel>
                    <Button Content="Adauga activitate" Width="150" Height="30" Click="AdaugaProgram_Click"/>
                    <DataGrid x:Name="dataGridProgram" Margin="0,10,0,0" AutoGenerateColumns="True" Background="White" Foreground="Black" IsReadOnly="True"/>
                </StackPanel>
            </TabItem>
            <TabItem Header="Materiale">
                <StackPanel Margin="10">
                    <TextBlock Text="Incarca material pentru grupa" FontSize="16" FontWeight="Bold" Foreground="White" Margin="0,0,0,10"/>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="Nume material:" Foreground="White" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <TextBox x:Name="txtNumeMaterial" Width="200"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="Fisier:" Foreground="White" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <TextBox x:Name="txtCaleFisier" Width="300" Height="25" IsReadOnly="True"/>
                        <Button Content="Selecteaza fisier" Click="SelecteazaFisier_Click"/>
                    </StackPanel>
                    <Button Content="Incarca material" Click="IncarcaMaterial_Click"/>
                    <DataGrid x:Name="dataGridMateriale" 
                              Margin="0,10,0,0"
                              AutoGenerateColumns="True"
                              Background="White"
                              Foreground="Black"
                              IsReadOnly="True"/>
                </StackPanel>
            </TabItem>
            <TabItem Header="Anunturi">
                <StackPanel Margin="10">
                    <TextBlock Text="Adauga anunt pentru parinti" FontSize="16" FontWeight="Bold" Foreground="White" Margin="0,0,0,10"/>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="Titlu:" Foreground="White" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <TextBox x:Name="txtTitluAnunt" Width="200"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal"  Margin="0,0,0,10">
                        <TextBlock Text="Descriere:" Foreground="White" Margin="0,0,5,0"/>
                        <TextBox x:Name="txtDescriereAnunt" Width="400" Height="100" AcceptsReturn="True" TextWrapping="Wrap"/>
                    </StackPanel>

                    <Button Content="Adauga anunt" Click="AdaugaAnunt_Click"/>

                    <DataGrid x:Name="dataGridAnunturi"
                              Margin="0,10,0,0"
                              AutoGenerateColumns="True"
                              Background="White"
                              Foreground="Black"
                              IsReadOnly="True"/>
                </StackPanel>
            </TabItem>
            <TabItem Header="Absente">
                <StackPanel Margin="10">
                    <TextBlock Text="Adauga absenta copil" FontSize="16" FontWeight="Bold" Foreground="White" Margin="0,0,0,10"/>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="Copil:" Foreground="White" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <ComboBox x:Name="comboCopii" Width="200" DisplayMemberPath="Nume" SelectedValuePath="IdCopil"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="Data absentei:" Foreground="White" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <DatePicker x:Name="dateAbsenta" Width="150" Background="White" BorderBrush="Gray" BorderThickness="1"/>
                    </StackPanel>

                    <Button Content="Adauga Absenta" Click="AdaugaAbsenta_Click"/>

                    <DataGrid x:Name="dataGridAbsente"
                              Margin="0,10,0,0"
                              AutoGenerateColumns="True"
                              Background="White"
                              Foreground="Black"
                              IsReadOnly="True"/>
                </StackPanel>
            </TabItem>
            <TabItem Header="Numar copii">
                <StackPanel Margin="10">
                    <Button Content="Calculeaza numarul de copii" Click="CalculeazaNumarCopii_Click"/>
                    <TextBlock x:Name="txtNumarCopii" FontSize="16" Foreground="White" Margin="0,10,0,0"/>
                </StackPanel>
            </TabItem>
            <TabItem Header="Notificari">
                <Button Content="Trimite Notificare" Click="DeschideTrimiteNotificareWindow_Click"/>
            </TabItem>
            <TabItem Header="Inapoi">
                <Button Content="Inapoi" Click="Inapoi_Click"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
