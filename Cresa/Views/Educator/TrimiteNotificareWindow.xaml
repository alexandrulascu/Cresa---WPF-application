<Window x:Class="Cresa.Educator.TrimiteNotificareWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Trimite Notificare" Height="250" Width="400">
    <Grid>
        <Grid.Resources>
            <Style TargetType="Button">
                <Setter Property="Foreground" Value="Black"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="Width" Value="200"/>
                <Setter Property="Height" Value="30"/>
                <Setter Property="Margin" Value="10"/>
                <Setter Property="Background">
                    <Setter.Value>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#00C9FF" Offset="0.0"/>
                            <GradientStop Color="#92FE9D" Offset="1.0"/>
                        </LinearGradientBrush>
                    </Setter.Value>
                </Setter>

                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border CornerRadius="6" Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </Grid.Resources>
        <Grid.Background>
            <ImageBrush ImageSource="/Resources/fundalEducator.jpg" Stretch="UniformToFill"/>
        </Grid.Background>
        <StackPanel Margin="20">
            <StackPanel Orientation="Horizontal" Margin="0,0,5,0">
                <TextBlock Text="Nume Parinte:" FontSize="15" FontWeight="Bold" Foreground="White" Margin="0,0,10,0"/>
                <ComboBox x:Name="ParinteComboBox" DisplayMemberPath="Nume" SelectedValuePath="IdParinte" Width="200"/>
            </StackPanel>
            <TextBlock Text="Mesaj:" FontSize="15" FontWeight="Bold" Foreground="White" Margin="0,20,10,0"/>
            <TextBox x:Name="MesajTextBox" Height="50" Width="400" Margin="0,5,0,10" AcceptsReturn="True"/>

            <Button Content="Trimite notificare" Click="Trimite_Notificare_Click"/>
        </StackPanel>
    </Grid>
</Window>
